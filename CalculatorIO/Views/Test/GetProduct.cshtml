@using ImperiaonlineToolsModels;
@model List<Product>

<div class="container">
    <br />
    <div style="text-align:center">
        <img src="http://ihcdn3.ioimg.org/iov6live/homepage4/header.png?v9" />
    </div>
        @foreach (var item in Model)
{
    <div class="col-md-6 container">
        <h2>
            @item.Title
        </h2>
        <div>
            @item.Description
        </div><br />
        <div>
            <iframe width=" 420" height="315" src="@item.VideoUrl" frameborder="0" allowfullscreen></iframe>
        </div>
        <div>
            <form action="/Cart/AddToCart/@item.ProductId" method="post">
                <input class="btn btn-success" type="submit" value="Add to cart" />
            </form>
        </div>
    </div>
}
    
</div>